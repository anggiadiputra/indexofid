# ==============================================
# SITE CONFIGURATION (Required for all domains)
# ==============================================

# Your website URL (automatically used in schema markup)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Site basic information
NEXT_PUBLIC_SITE_NAME=Your Website Name
NEXT_PUBLIC_SITE_DESCRIPTION=Your website description for SEO
NEXT_PUBLIC_SITE_LOGO_TEXT=YW
NEXT_PUBLIC_SITE_SLOGAN=Your catchy slogan here
NEXT_PUBLIC_SITE_AUTHOR=Your Author Name

# ==============================================
# WORDPRESS API CONFIGURATION
# ==============================================

# WordPress REST API endpoints
WORDPRESS_API_URL=https://your-wp-site.com/wp-json/wp/v2
NEXT_PUBLIC_WORDPRESS_API_URL=https://your-wp-site.com/wp-json/wp/v2

# Fallback API URL (used when primary API fails)
NEXT_PUBLIC_FALLBACK_API_URL=https://your-fallback-wp-site.com/wp-json/wp/v2

# WordPress backend site URL (for Rank Math and URL redirects)
WORDPRESS_BACKEND_URL=https://your-wp-site.com

# WordPress backend domain for Next.js image optimization
NEXT_PUBLIC_WP_BACKEND_DOMAIN=your-wp-site.com

# ==============================================
# ORGANIZATION SCHEMA CONFIGURATION
# ==============================================

# Organization details (automatically used in schema markup)
NEXT_PUBLIC_ORG_NAME=Your Company Name
NEXT_PUBLIC_ORG_DESCRIPTION=Your company description in your language
NEXT_PUBLIC_ORG_PHONE=+1-234-567-8900
NEXT_PUBLIC_ORG_EMAIL=contact@yourcompany.com
NEXT_PUBLIC_ORG_ADDRESS=Your City, Your Country
NEXT_PUBLIC_ORG_HOURS=Monday - Friday: 09:00 - 17:00

# Image paths (relative to your domain or absolute URLs)
NEXT_PUBLIC_ORG_LOGO=/logo.png
NEXT_PUBLIC_DEFAULT_IMAGE=/default-article-image.jpg

# ==============================================
# SOCIAL MEDIA URLS (Optional)
# ==============================================

# Social media profiles (leave empty if not applicable)
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/yourpage
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/youraccount
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany
NEXT_PUBLIC_WHATSAPP_NUMBER=1234567890

# ==============================================
# SERVICES CONFIGURATION
# ==============================================

# Your main services (used in schema markup)
NEXT_PUBLIC_SERVICE_1=Web Development
NEXT_PUBLIC_SERVICE_2=Digital Marketing
NEXT_PUBLIC_SERVICE_3=SEO Services
NEXT_PUBLIC_SERVICE_4=Consulting

# ==============================================
# LOCALIZATION SETTINGS
# ==============================================

# Language and country settings
NEXT_PUBLIC_SITE_LANGUAGE=en-US
NEXT_PUBLIC_SITE_COUNTRY=United States

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================

# Cache revalidation time in seconds (3600 = 1 hour)
REVALIDATE_TIME=3600

# ==============================================
# NEWSLETTER SERVICE CONFIGURATION (Optional)
# ==============================================

# Choose your newsletter service: mailchimp, convertkit, emailoctopus
NEWSLETTER_SERVICE=mailchimp

# Mailchimp Configuration
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id
MAILCHIMP_SERVER=us1

# ConvertKit Configuration
CONVERTKIT_API_KEY=your_convertkit_api_key
CONVERTKIT_FORM_ID=your_convertkit_form_id

# EmailOctopus Configuration
EMAILOCTOPUS_API_KEY=your_emailoctopus_api_key
EMAILOCTOPUS_LIST_ID=your_emailoctopus_list_id

