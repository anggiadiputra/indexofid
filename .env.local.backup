# ==============================================
# RANK MATH SEO API CONFIGURATION
# ==============================================

# Enable/disable Rank Math headless support
NEXT_PUBLIC_RANKMATH_API_ENABLED=true

# Rank Math API endpoint (change domain to your WordPress site)
# This endpoint provides focus keyword, thumbnail, and complete SEO meta data
NEXT_PUBLIC_RANKMATH_API_URL=https://your-wp-site.com/wp-json/rankmath/v1/getHead

# Example for IndexOf.ID:
# NEXT_PUBLIC_RANKMATH_API_ENABLED=true
# NEXT_PUBLIC_RANKMATH_API_URL=https://backend.indexof.id/wp-json/rankmath/v1/getHead 