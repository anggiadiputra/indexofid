# ==============================================
# WORDPRESS API CONFIGURATION - REQUIRED
# ==============================================

# Primary WordPress API endpoint
WORDPRESS_API_URL=https://backend.indexof.id/wp-json/wp/v2
NEXT_PUBLIC_WORDPRESS_API_URL=https://backend.indexof.id/wp-json/wp/v2

# Fallback API endpoint (when primary fails)
NEXT_PUBLIC_FALLBACK_API_URL=https://backend.indexof.id/wp-json/wp/v2

# WordPress backend domain for images (extracted from API URL)
NEXT_PUBLIC_WP_BACKEND_DOMAIN=backend.indexof.id

# ==============================================
# SITE CONFIGURATION
# ==============================================

NEXT_PUBLIC_SITE_URL=https://indexof.id
NEXT_PUBLIC_SITE_NAME=IndexOf.ID
NEXT_PUBLIC_SITE_DESCRIPTION=Platform berita dan informasi teknologi terkini
NEXT_PUBLIC_SITE_LOGO_TEXT=IndexOf
NEXT_PUBLIC_SITE_SLOGAN=Berita dan Informasi Teknologi Terkini
NEXT_PUBLIC_SITE_AUTHOR=Dex Ado

# Images and Media
NEXT_PUBLIC_OG_IMAGE=/og-image.jpg
NEXT_PUBLIC_TWITTER_IMAGE=/twitter-image.jpg
NEXT_PUBLIC_SITE_LOGO=/logo.png
NEXT_PUBLIC_RSS_TITLE=IndexOf.ID RSS Feed

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=indexof_id

# Domain settings for Next.js images
NEXT_PUBLIC_SITE_DOMAIN=www.indexof.id
NEXT_PUBLIC_SITE_DOMAIN_ALT=indexof.id

# Alternate language URL (optional)
NEXT_PUBLIC_ALT_LANGUAGE_URL=https://indexof.id/en

# ==============================================
# ORGANIZATION SCHEMA
# ==============================================

NEXT_PUBLIC_ORG_NAME=IndexOf.ID
NEXT_PUBLIC_ORG_DESCRIPTION=Platform berita dan informasi teknologi terkini di Indonesia
NEXT_PUBLIC_ORG_PHONE=+62-812-3456-7890
NEXT_PUBLIC_ORG_EMAIL=info@indexof.id
NEXT_PUBLIC_ORG_ADDRESS=Jakarta, Indonesia
NEXT_PUBLIC_ORG_HOURS=24/7 Online

# Schema.org Policy URLs
NEXT_PUBLIC_EDITORIAL_POLICY_URL=/editorial-policy
NEXT_PUBLIC_ETHICS_POLICY_URL=/ethics-policy
NEXT_PUBLIC_DIVERSITY_POLICY_URL=/diversity-policy
NEXT_PUBLIC_ABOUT_URL=/about

# ==============================================
# LOCALIZATION
# ==============================================

NEXT_PUBLIC_SITE_LANGUAGE=id-ID
NEXT_PUBLIC_SITE_COUNTRY=Indonesia

# ==============================================
# API CONFIGURATIONS
# ==============================================

# RNA Domain API (Optional - for domain checking page)
NEXT_PUBLIC_RNA_API_URL=https://api.rna.id/v1/account/prices
NEXT_PUBLIC_RNA_API_KEY=your-rna-api-key
NEXT_PUBLIC_RNA_RESELLER_ID=your-rna-reseller-id

# WhatsApp Contact
NEXT_PUBLIC_WHATSAPP_NUMBER=6281234567890

# Customer Login URL (Optional)
NEXT_PUBLIC_CUSTOMER_LOGIN_URL=https://dash.indexof.id/customer/login

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================

REVALIDATE_TIME=3600

# ==============================================
# RANK MATH SEO API CONFIGURATION
# ==============================================

# Enable/disable Rank Math headless support
NEXT_PUBLIC_RANKMATH_API_ENABLED=true

# Rank Math API endpoint
NEXT_PUBLIC_RANKMATH_API_URL=https://backend.indexof.id/wp-json/rankmath/v1/getHead 

# ==============================================
# HEADLESS DOMAIN MAPPING
# ==============================================

# WordPress backend domain (for canonical URL transformation)
NEXT_PUBLIC_WORDPRESS_BACKEND_URL=https://backend.indexof.id

# Frontend domain (transform backend URLs to this domain)
NEXT_PUBLIC_FRONTEND_DOMAIN=https://www.indexof.id 